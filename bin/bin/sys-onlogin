#!/bin/bash

# programs to run on login. Should be called by DE on login

# uncomment to make i3 do high res properly
xrandr --dpi 160 && xdotool key Super+Shift+r

# system tray stuff
i3-msg 'exec pasystray'
i3-msg 'exec "nm-applet"'
i3-msg 'exec "dropbox"'

# pulsaudio
i3-msg 'exec "pulseaudio --start"'

# compositing
i3-msg 'exec "compton --vsync opengl"'

# set wallpaper
feh --bg-fill ~/.wallpapers/current 

# force numlock to be on
numlockx on 

# twmnd 
i3-msg 'exec "twmnd"'

# hook workspace setup
interface-workspace-setup
