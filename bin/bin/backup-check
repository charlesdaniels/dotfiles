#!/bin/bash

. $CAD_ETC_PATH/BACKUP.cfg
if [ ! -d "${CAD_BACKUP_PATH}" ]; then
  echo "Backup folder does is not mounted"
  exit
fi

CURRENT_DATE=$(date "+%Y-%m-%d:%H")

borg check --info $CAD_BACKUP_PATH \
    &> $CAD_BACKUP_LOG_PATH/$CURRENT_DATE~check.log

echo "log file has been saved to $CAD_BACKUP_LOG_PATH/$CURRENT_DATE~check.log"