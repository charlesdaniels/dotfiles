#!/bin/bash

. $CAD_ETC_PATH/sync/SYNC.cfg

if [ -z ${1+x} ] ; then
    echo "ERROR: no target specified"
    exit 1
fi 

if [ ! -f $CAD_ETC_PATH/sync/targets/$1.cfg ] ; then
    echo "ERROR: specified target does not exist"
    exit 1
fi 

TARGET=$1

. $CAD_ETC_PATH/sync/targets/$TARGET.cfg

$CAD_SYNC_TARGET_COMMAND "$CAD_SYNC_TARGET_SOURCE_DIR" \
    "$CAD_SYNC_TARGET_DEST_DIR" $CAD_SYNC_TARGET_OPTS