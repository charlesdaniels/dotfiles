#!/bin/bash

if [ ! -f $CAD_ETC_PATH/sync/groups/$1 ] ; then
    echo "ERROR: group $1 does not exist in $CAD_ETC_PATH/sync/groups/"
    exit 1
fi

cat $CAD_ETC_PATH/sync/groups/$1 | while read TARGET ; do 
    . $CAD_ETC_PATH/sync/targets/$TARGET.cfg

    $CAD_SYNC_TARGET_COMMAND "$CAD_SYNC_TARGET_SOURCE_DIR" \
        "$CAD_SYNC_TARGET_DEST_DIR" $CAD_SYNC_TARGET_OPTS
done