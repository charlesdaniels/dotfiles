#!/bin/bash
# setup development environment with i3

EDITOR=/usr/bin/subl3
TERMINAL=/usr/bin/termite 
FILE_MANAGER=/usr/bin/pcmanfm
EDITOR_WORKSPACE=Δ
FILER_WORKSPACE=∈
PROJECT_DIR=$1
PROJECT_DIR="${PROJECT_DIR/#\~/$HOME}"
EDITOR_LAYOUT=$HOME/bin/editor_layout.json


echo "editor is: $EDITOR"
echo "terminal is: $TERMINAL"
echo "file manager is: $FILE_MANAGER"
echo "project dir is:  $PROJECT_DIR"

i3-msg "workspace $EDITOR_WORKSPACE"
i3-msg "append_layout $EDITOR_LAYOUT"
if [[ -d $PROJECT_DIR ]] ; then
	i3-msg "exec $EDITOR"
	i3-msg "exec $TERMINAL --directory=\"$PROJECT_DIR\""
else 
	i3-msg "exec $EDITOR"
	i3-msg "exec $TERMINAL"
fi

i3-msg "workspace $FILER_WORKSPACE"
if [[ -d $PROJECT_DIR ]] ; then
	i3-msg "exec $FILE_MANAGER \"$PROJECT_DIR\""
else
	i3-msg "exec $FILE_MANAGER"
fi

i3-msg "workspace $EDITOR_WORKSPACE"
