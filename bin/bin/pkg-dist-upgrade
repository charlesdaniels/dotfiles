#!/bin/sh

pkg-upgrade

arch_upgrade () 
{
    sudo mkinitcpio -p linux
    sudo pacman-key --refresh-keys
}

case "$(pkg-get-manager)" in 
    pacaur)
        arch_upgrade
        ;;

    pacman)
        arch_upgrade
        ;;
    
    apt-get)
        sudo apt-get dist-upgrade
        ;;

    aptitude)
        echo "not yet implemented"
        ;;

    yum)
        echo "not yet implemented"
        ;;

    brew)
        echo "unsupported operation"
        ;;
	 pkg)
	 	  sudo pkg upgrade
		  ;;
    *) 
        echo "ERROR: no known package manager available"
        exit 1
esac 
