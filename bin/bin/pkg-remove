#!/bin/sh

case "$(pkg-get-manager)" in 
    pacaur)
        pacaur -R "$@"
        ;;

    pacman)
        sudo pacman -R "$@" 
        ;;
    
    apt-get)
        sudo apt-get remove "$@" 
        ;;

    aptitude)
        sudo aptitude remove "$@"
        ;;

    yum)
        sudo yum remove "$@" 
        ;;

    brew)
        brew remove "$@"
        ;;
	 pkg)
	 	  sudo pkg delete "$@"
		  ;;
    *) 
        echo "ERROR: no known package manager available"
        exit 1
esac 
