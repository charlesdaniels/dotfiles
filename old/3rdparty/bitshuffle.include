# symlink bitshuffle in place

if [ "$PROVISION_HAVE_ROOT" = "NO" ] ; then
	# we only want to do a non-privileged install

	printf "INFO: installing bitshuffle..."

	# this assumes ~/bin is where binaries go
	rm -f "$HOME/bin/bitshuffle"
	ln -s "$THIRDPARTY_DIR/bitshuffle/bitshuffle/bitshuffle.py" "$HOME/bin/bitshuffle"

	echo " DONE"
fi
