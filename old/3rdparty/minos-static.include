if [ "$PROVISION_HAVE_ROOT" = "NO" ] ; then
	# we only want to do a non-privileged install
	
	printf "INFO: installing satic-get... "

	if [ "$PLATFORM" = "Linux" ] ; then
		rm -f "$HOME/bin/static-get"
		ln -s "$THIRDPARTY_DIR/minos-static/static-get" "$HOME/bin/static-get"
		echo "DONE"
	else
		echo "SKIP ('$PLATFORM' is not 'Linux')"
	fi
fi
