# bootstrap for Darwin (macOS) systems

printf "INFO: ensuring developer tools are present... "
if ! pkgutil --pkg-info=com.apple.pkg.CLTools_Executables > /dev/null 2>&1 ; then
	echo "DONE"
	printf "INFO: installing developer tools (this can take some time)... "

	"$PROVISION_DIR/platform/darwin/install_xcode_commandline_tools.sh" > /dev/null 2>&1

fi

echo "DONE"
