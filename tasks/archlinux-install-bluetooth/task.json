{
    "provides": "archlinux-install-bluetooth",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update"
    ],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S pacman -S --noconfirm --needed blueman pulseaudio-bluetooth"],
        ["pacmd", "set-card-profile", "2", "a2dp_sink"]
    ]
}
