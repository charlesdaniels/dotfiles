{
    "provides": "archlinux-install-utils",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update-aurman",
        "archlinux-install-aurman"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["aurman", "-S", "--noedit", "--noconfirm", "--needed",
            "neovim",
            "gnu-netcat",
            "nload",
            "htop",
            "tmux",
            "zsh",
            "parallel",
            "cmus",
            "libmad",
            "ffmpeg",
            "ctags",
            "vorbis-tools",
            "cdparanoia",
            "youtube-dl",
            "wget",
            "curl",
            "sanoid",
            "ledger"
        ]
    ]
}
