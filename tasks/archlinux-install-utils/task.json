{
    "provides": "archlinux-install-utils",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update",
        "archlinux-install-pacaur"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["pacaur", "-S", "--noedit", "--noconfirm",
            "neovim",
            "netcat",
            "nload",
            "htop",
            "tmux",
            "zsh",
            "parallel"
        ]
    ]
}
