{
    "provides": "archlinux-install-xorg",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update-pacaur",
        "archlinux-install-pacaur"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["pacaur", "-S", "--noedit", "--noconfirm", "--needed",
            "xorg",
            "xorg-xinit",
            "i3",
            "xdotool",
            "xclip",
            "lxdm",
            "arandr"
        ]
    ]
}
