{
    "provides": "archlinux-install-xorg",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update-aurman",
        "archlinux-install-aurman"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["aurman", "-S", "--noedit", "--noconfirm", "--needed",
            "xorg",
            "xorg-xinit",
            "i3-wm",
            "i3lock",
            "i3status",
            "xdotool",
            "xclip",
            "lxdm",
            "arandr"
        ]
    ]
}
