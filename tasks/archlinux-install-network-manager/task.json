{
    "provides": "archlinux-install-network-manager",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S pacman -S networkmanager"],
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S systemctl enable NetworkManager"]
    ]
}
