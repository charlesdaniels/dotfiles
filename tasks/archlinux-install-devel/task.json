{
    "provides": "archlinux-install-devel",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update",
        "archlinux-install-pacaur"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["pacaur", "-S", "--noedit", "--noconfirm", "--needed",
            "python",
            "gcc",
            "binutils",
            "perl",
            "ruby",
            "python-psutil",
            "python-tabulate",
            "python-humanize",
            "python-numpy",
            "python-scipy",
            "graphviz",
            "sphinx",
            "python-recommonmark"
        ]
    ]
}
