{
    "provides": "install-lockscreen.service",
    "manifest": ["lockscreen.service"],
    "require-sudo": true,
    "require-task": ["require-systemd", "install-scripts-opt"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S cp $TASKUTIL_TASK_DIR/lockscreen.service /etc/systemd/system/lockscreen.service"],
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S systemctl enable lockscreen.service"]
    ]
}
