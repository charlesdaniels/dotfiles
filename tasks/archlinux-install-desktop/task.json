{
    "provides": "archlinux-install-desktop",
    "manifest": [],
    "require-sudo": true,
    "require-task": [
        "require-archlinux",
        "archlinux-update-aurman",
        "archlinux-install-aurman"],
    "run-script": [
        ["sh", "-c", "echo $TASKUTIL_SUDO_PASSWORD | sudo -S date"],
        ["aurman", "-S", "--noedit", "--noconfirm", "--needed",
            "pcmanfm-qt",
            "firefox",
            "thunderbird",
            "rofi",
            "rxvt-unicode",
            "keepassxc",
            "dropbox",
            "pasystray",
            "pavucontrol",
            "network-manager-applet",
            "pulseaudio",
            "pulseaudio-alsa",
            "engrampa",
            "remmina",
            "freerdp"
        ]
    ]
}
