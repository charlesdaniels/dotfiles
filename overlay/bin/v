#!/bin/sh

attempt () {
	tn=$1
	shift
	if [ -x "$(which $tn 2>&1)" ] ; then
		"$tn" "$@" < /dev/stdin
		exit $?
	fi
}

# set terminal title
echo '\033k'v'\033\\'

# fix doas v changing ownership of ~/.vimtags
if [ "$(whoami)" = "root" ] ; then
	export HOME=/hoor
fi

attempt neovim "$@"
attempt nvim "$@"
attempt vim "$@"
attempt vi "$@"
attempt nano "$@"

echo "no suitable editor found" > /dev/stderr
exit 1
