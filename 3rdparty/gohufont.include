printf "INFO: installing gohufont"
GOHU_TMP="/tmp/$(uuidgen)"
run_step "$LOG_DIR/gohufont.log" mkdir -p "$GOHU_TMP"

run_step "$LOG_DIR/gohufont.log" wget -O "$GOHU_TMP/gohu.tar.gz" "font.gohu.org/gohufont-2.1.tar.gz"

run_step "$LOG_DIR/gohufont.log" tar xvf "$GOHU_TMP/gohu.tar.gz" -C "$GOHU_TMP"

if [ ! -e "$HOME/.local/share/fonts" ] ; then
	run_step "$LOG_DIR/gohufont.log" mkdir -p "$HOME/.local/share/fonts"
fi

for f in "$GOHU_TMP"/gohufont-*/*.pcf.gz ; do
	run_step "$LOG_DIR/gohufont.log" cp "$f" "$HOME/.local/share/fonts"
done
run_step "$LOG_DIR/gohufont.log" fc-cache
run_step "$LOG_DIR/gohufont.log" rm -rf "$GOHU_TMP"
echo " DONE"
