printf "INFO: installing herc-tools-public"

HERC_TOOLS_PUBLIC="$THIRDPARTY_DIR/herc-tools-public"
for f in "$HERC_TOOLS_PUBLIC"/python/* ; do
	DEST_FILE="$HOME/bin/$(basename "$f")"
	if [ -e "$DEST_FILE" ] ; then
		run_step "$LOG_DIR/herc_tools_public.log" rm "$DEST_FILE"
	fi
	run_step "$LOG_DIR/herc_tools_public.log" ln -s "$f" "$DEST_FILE"
done
echo " DONE"

