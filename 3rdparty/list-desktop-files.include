if [ "$PROVISION_HAVE_ROOT" = "NO" ] ; then
	# we only want to do a non-privileged install

	printf "INFO: installing lsdesktopf... "
	rm -f "$HOME/bin/lsdesktopf"
	chmod +x "$THIRDPARTY_DIR/list-desktop-files/lsdesktopf"
	ln -s "$THIRDPARTY_DIR/list-desktop-files/lsdesktopf" "$HOME/bin/lsdesktopf"
	echo "DONE"

fi
