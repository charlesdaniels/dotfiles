source $HOME/dotfiles/lib/configs/MASTER.CFG

case "$(pkg-get-manager)" in 
  pacaur)
    pacaur -S "$@"
    ;;

  pacman)
    sudo pacman -S "$@" 
    ;;
  
  apt-get)
    sudo apt-get install "$@" 
    ;;

  aptitude)
    sudo aptitude install "$@"
    ;;

  yum)
    sudo yum install "$@" 
    ;;

  brew)
    brew install "$@"
    if [ $? -ne 0 ] ; then
      echo "requested packages appears to be in cask..."
      brew cask install "$@"
    fi 
    ;;
  pkg)
    sudo pkg install "$@"
    ;;
  port)
    sudo port install "$@"
    ;;
  *) 
    echo "ERROR: no known package manager available"
    exit 1
esac 
