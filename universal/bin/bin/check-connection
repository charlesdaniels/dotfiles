########10########20########30########40########50########60########70########80

TIMESTAMP=$(invoke-sensible-date)
echo "BEGIN CONNECTION CHECK"
echo "TIMESTAMP: $TIMESTAMP"
echo "PING TIMEOUT: $PING_TIMEOUT"
echo "GATEWAY: $GATEWAY"

# gateway check
printf "GATEWAY STATUS: "
ping $PING_OPTS $GATEWAY > /dev/null 
if [ $? -ne 0 ] ; then
  echo "FAIL"
else
  echo "OK"
fi

# DNS
echo "BEGIN DNS RESOLUTION CHECK"
for host in $WAN_HOSTS ; do
  printf "$TAB$host: "
  host $host > /dev/null
  if [ $? -ne 0 ] ; then
    echo "FAIL"
  else
    echo "OK"
  fi
done
echo "END DNS RESOLUTION CHECK"

# hosts (by addr)
echo "BEGIN WAN CONNECIVITY CHECK (by name)"
for host in $WAN_HOSTS ; do
  printf "$TAB$host: "
  ping $PING_OPTS $host > /dev/null
  if [ $? -ne 0 ] ; then
    echo "FAIL"
  else
    echo "OK"
  fi
done
echo "END WAN CONNECIVITY CHECK (by name)"

# hosts by IP
echo "BEGIN WAN CONNECIVITY CHECK (by ip)"
for host in $WAN_IPS ; do
  printf "$TAB$host: "
  ping $PING_OPTS $host > /dev/null
  if [ $? -ne 0 ] ; then
    echo "FAIL"
  else
    echo "OK"
  fi
done
echo "END WAN CONNECIVITY CHECK (by ip)"

echo "BEGIN SPEEDTEST"
$SPEEDTEST_CMD --simple |  sed "s/^/$TAB/"
echo "END SPEEDTEST"

echo "TEST COMPLETED AT: $(invoke-sensible-date)"
echo "END CONNECIVITY CHECK"

