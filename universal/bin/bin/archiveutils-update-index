########10########20########30########40########50########60########70########80

source dotfiles/lib/configs/MASTER.CFG

CACHE_DIR="$NET_CDANIELS_CACHE_DIR"
INDEX_DIR="$CACHE_DIR/net.cdaniels.archiveutils.index"

echo "INFO: updating archive index (start time is `date`)"

printf "INFO: testing local index... "
if [ ! -e "$INDEX_DIR" ] ; then
  mkdir -p "$INDEX_DIR"
  if [ $? -ne 0 ] ; then
    echo "FAIL"
    echo "ERROR 64: index directory does not exist and cannot be created"
    exit 1
  fi
fi
echo "DONE"

echo "INFO: archive index update is complete (end time is `date`)"
exit 0


