get_python() 
{
  command -v $1 > /dev/null
  if [ $? -eq 0 ] ; then
    echo $1
    exit
  fi
}

get_python python3
get_python python35
get_python python3.5
get_python python34
get_python python3.4
get_python python

echo "ERROR: failed to locate a sensible python"
exit 1

